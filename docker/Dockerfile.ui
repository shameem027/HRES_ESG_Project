# --- File: docker/Dockerfile.ui (Definitive Final Version - Bulletproof User Management) ---
FROM python:3.11-slim

# 1. Install system dependencies as root
USER root
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# 2. Copy requirements.txt (still as root)
COPY requirements.txt .

# 3. Switch to another arbitrary non-root user for security
USER 1002

# 4. Install dependencies (now as USER 1002)
RUN pip install --no-cache-dir -r requirements.txt

# 5. Copy the Streamlit UI script and logo (now as USER 1002)
COPY ui.py .
COPY logo.png .

EXPOSE 8501
CMD ["streamlit", "run", "ui.py", "--server.port=8501", "--server.address=0.0.0.0"]